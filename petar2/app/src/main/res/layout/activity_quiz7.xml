<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/groupStyleorange_50"
    android:orientation="vertical"
    tools:context=".Quiz7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_21pxh"
        android:layout_marginStart="@dimen/_21pxh"
        android:layout_marginTop="@dimen/_40pxv"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="문제 7."
            android:textStyle="bold"
            android:textColor="@color/lime_100"
            android:textAppearance="@style/some_id_2"
            android:lineSpacingExtra="-1sp"/>


        <TextView
            android:id="@+id/some_id"
            android:layout_width="351dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="다음 중 저혈당쇼크의 증상이 아닌 것을 고르시오."
            android:textStyle="bold"
            android:textAppearance="@style/some_id"
            android:lineSpacingExtra="-1sp"
            android:gravity="top" />

    </LinearLayout>

    <View
        android:background="@color/lime_100"
        android:id="@+id/lineLineFour"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/_3pxv"
        android:layout_marginEnd="@dimen/_21pxh"
        android:layout_marginStart="@dimen/_21pxh"
        android:layout_marginTop="@dimen/_15pxv"
        android:layout_width="@dimen/_354pxh"
        android:layout_marginRight="@dimen/_21pxh"
        android:layout_marginLeft="@dimen/_21pxh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="@dimen/_21pxh"
        android:layout_marginStart="@dimen/_21pxh"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="1. 기력 저하, 무기력증을 동반한 축 늘어진 모습을 보이는 증상"
            android:textAppearance="@style/some_id_1"
            android:lineSpacingExtra="-1sp"/>

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="2. 식욕저하로 인한 급여 거부"
            android:textAppearance="@style/some_id_1"
            android:lineSpacingExtra="-1sp"/>

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="3. 잇몸을 직접적 체크하여 잇몸이 빨갛게 혈색이 도는 증상"
            android:textAppearance="@style/some_id_1"
            android:lineSpacingExtra="-1sp"/>
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="4. 활동성 있게 놀다가 무기력증을 동반한 전신경련, 마비, 발작 등의 증상"
            android:textAppearance="@style/some_id_1"
            android:lineSpacingExtra="-1sp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="90dp"
        android:src="@drawable/logo2"/>


</LinearLayout>